<?xml version="1.0"?>
<rdf:RDF xmlns="https://fot.education/schema#"
     xml:base="https://fot.education/schema"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">
    
    <owl:Ontology rdf:about="https://fot.education/schema"/>
    
    <!-- Core Classes -->
    <owl:Class rdf:about="#Claim">
        <rdfs:label>Claim</rdfs:label>
        <rdfs:comment>A statement that can be in superposed, true, or false state</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#Concept">
        <rdfs:label>Concept</rdfs:label>
        <rdfs:comment>A domain concept that can be learned or taught</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#Agent">
        <rdfs:label>Agent</rdfs:label>
        <rdfs:comment>An entity that can interact with the system</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#Virtue">
        <rdfs:label>Virtue</rdfs:label>
        <rdfs:comment>A moral quality that can be measured and developed</rdfs:comment>
    </owl:Class>
    
    <owl:Class rdf:about="#DomainLink">
        <rdfs:label>DomainLink</rdf:label>
        <rdfs:comment>A connection between concepts across different domains</rdfs:comment>
    </owl:Class>
    
    <!-- Subclasses of Agent -->
    <owl:Class rdf:about="#Student">
        <rdfs:subClassOf rdf:resource="#Agent"/>
        <rdfs:label>Student</rdfs:label>
    </owl:Class>
    
    <owl:Class rdf:about="#Teacher">
        <rdfs:subClassOf rdf:resource="#Agent"/>
        <rdfs:label>Teacher</rdfs:label>
    </owl:Class>
    
    <owl:Class rdf:about="#Parent">
        <rdfs:subClassOf rdf:resource="#Agent"/>
        <rdfs:label>Parent</rdfs:label>
    </owl:Class>
    
    <!-- Properties -->
    <owl:ObjectProperty rdf:about="#about">
        <rdfs:label>about</rdfs:label>
        <rdfs:domain rdf:resource="#Claim"/>
        <rdfs:range rdf:resource="#Concept"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#proposes">
        <rdfs:label>proposes</rdfs:label>
        <rdfs:domain rdf:resource="#Agent"/>
        <rdfs:range rdf:resource="#Claim"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#verifies">
        <rdfs:label>verifies</rdfs:label>
        <rdfs:domain rdf:resource="#Agent"/>
        <rdfs:range rdf:resource="#Claim"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#learns">
        <rdfs:label>learns</rdfs:label>
        <rdfs:domain rdf:resource="#Student"/>
        <rdfs:range rdf:resource="#Concept"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#teaches">
        <rdfs:label>teaches</rdfs:label>
        <rdfs:domain rdf:resource="#Teacher"/>
        <rdfs:range rdf:resource="#Concept"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#guardianOf">
        <rdfs:label>guardianOf</rdfs:label>
        <rdfs:domain rdf:resource="#Parent"/>
        <rdfs:range rdf:resource="#Student"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#links">
        <rdfs:label>links</rdfs:label>
        <rdfs:domain rdf:resource="#Concept"/>
        <rdfs:range rdf:resource="#Concept"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#requiresVirtue">
        <rdfs:label>requiresVirtue</rdfs:label>
        <rdfs:domain rdf:resource="#Claim"/>
        <rdfs:range rdf:resource="#Virtue"/>
    </owl:ObjectProperty>
    
    <owl:ObjectProperty rdf:about="#hasProvenance">
        <rdfs:label>hasProvenance</rdfs:label>
        <rdfs:domain rdf:resource="#Claim"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#anyURI"/>
    </owl:ObjectProperty>
    
    <!-- Data Properties -->
    <owl:DatatypeProperty rdf:about="#state">
        <rdfs:label>state</rdfs:label>
        <rdfs:domain rdf:resource="#Claim"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#confidence">
        <rdfs:label>confidence</rdfs:label>
        <rdfs:domain rdf:resource="#Claim"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#double"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#mastery">
        <rdfs:label>mastery</rdfs:label>
        <rdfs:domain rdf:resource="#learns"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#double"/>
    </owl:DatatypeProperty>
    
    <owl:DatatypeProperty rdf:about="#linkType">
        <rdfs:label>linkType</rdfs:label>
        <rdfs:domain rdf:resource="#links"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
    </owl:DatatypeProperty>
    
</rdf:RDF>
